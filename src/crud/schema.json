{
  "$schema": "http://json-schema.org/schema",
  "$id": "crud-module",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "모듈 이름",
      "x-prompt": "모듈 이름을 입력하세요:"
    },
    "path": {
      "type": "string",
      "description": "파일을 생성할 경로",
      "default": "src/resources",
      "x-prompt": "어디에 파일을 생성할까요?"
    },
    "prismaPath": {
      "type": "string",
      "description": "대상 프로젝트의 Prisma 스키마 파일 경로",
      "default": "prisma/schema.prisma"
    },
    "domain": {
      "type": "string",
      "description": "도메인 템플릿 타입",
      "default": "default",
      "enum": ["default"],
      "x-prompt": "템플릿 도메인을 선택해주세요?"
    }
  },
  "required": ["name", "domain"]
}
