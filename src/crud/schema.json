{
  "$schema": "http://json-schema.org/schema",
  "$id": "crud-module",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the module",
      "x-prompt": "What is the name of the module?"
    },
    "path": {
      "type": "string",
      "description": "Where to create the files",
      "default": "src/resources",
      "x-prompt": "In which folder do you want to generate?"
    },
    "prismaPath": {
      "type": "string",
      "description": "Path to prisma schema file in target project",
      "default": "prisma/schema.prisma",
      "x-prompt": "Path to prisma schema? (default prisma/schema.prisma)"
    }
  },
  "required": ["name"]
}
