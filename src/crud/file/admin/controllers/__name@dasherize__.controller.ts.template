import { Body, Param, ParseIntPipe, Query } from "@nestjs/common";
import { <%= classify(name) %>Service } from "../<%= dasherize(name) %>.service";
import { NumberIdOnlyResponseDto, NullDataResponseDto } from "src/common/dto/response.dto";
import { CommonController } from "src/common/utils/common.controller";
import { ApiController } from "src/common/decorators/api-controller.decorator";
import { ApiDocs } from "src/common/decorators/api-docs-option.decorator";
import { <%= classify(name) %>CreateDto } from "../dto/request/<%= dasherize(name) %>-create.dto";
import { <%= classify(name) %>UpdateDto } from "../dto/request/<%= dasherize(name) %>-update.dto";
import { <%= classify(name) %>FindManyDto } from "../dto/request/<%= dasherize(name) %>-find.dto";
import {
  <%= classify(name) %>FindManyResponseDto,
  <%= classify(name) %>FindUniqueResponseDto,
} from "../dto/response/<%= dasherize(name) %>-find-response.dto";

@ApiController("mgmt/<%= dasherize(name) %>")
export class <%= classify(name) %>Controller extends CommonController {
  constructor(private readonly service: <%= classify(name) %>Service) {
    super(<%= classify(name) %>Service.MODULE_NAME);
  }

  @ApiDocs({ endpoint: ":id", summary: `${<%= classify(name) %>Service.MODULE_NAME} 상세 조회`, role: "admin" })
  async findUnique(
    @Param("id", ParseIntPipe) id: number,
  ): Promise<<%= classify(name) %>FindUniqueResponseDto> {
    const res = await this.service.findUnique({ id });
    return this.responseData(this.FIND_UNIQUE, res);
  }

  @ApiDocs({ summary: `${<%= classify(name) %>Service.MODULE_NAME} 목록 조회`, role: "admin" })
  async findMany(
    @Query() query: <%= classify(name) %>FindManyDto,
  ): Promise<<%= classify(name) %>FindManyResponseDto> {
    const { resources, meta } = await this.service.findMany(query);
    return this.responseData(this.FIND_MANY, resources, meta);
  }

  @ApiDocs({ method: "POST", summary: `${<%= classify(name) %>Service.MODULE_NAME} 생성`, role: "admin" })
  async create(@Body() body: <%= classify(name) %>CreateDto): Promise<NumberIdOnlyResponseDto> {
    const { id } = await this.service.create(body);
    return this.responseData(this.CREATE, { id });
  }

  @ApiDocs({ method: "PATCH", endpoint: ":id", summary: `${<%= classify(name) %>Service.MODULE_NAME} 수정`, role: "admin" })
  async update(
    @Param("id", ParseIntPipe) id: number,
    @Body() body: <%= classify(name) %>UpdateDto,
  ): Promise<NullDataResponseDto> {
    await this.service.update({ ...body, id });
    return this.responseData(this.UPDATE);
  }

  @ApiDocs({ method: "DELETE", endpoint: ":id", summary: `${<%= classify(name) %>Service.MODULE_NAME} 삭제 (Soft)`, role: "admin" })
  async softDelete(@Param("id", ParseIntPipe) id: number): Promise<NullDataResponseDto> {
    await this.service.softDelete(id);
    return this.responseData(this.DELETE);
  }

  @ApiDocs({ method: "DELETE", endpoint: ":id/permanent", summary: `${<%= classify(name) %>Service.MODULE_NAME} 완전 삭제 (Hard)`, role: "admin" })
  async hardDelete(@Param("id", ParseIntPipe) id: number): Promise<NullDataResponseDto> {
    await this.service.hardDelete(id);
    return this.responseData(this.DELETE);
  }

  @ApiDocs({ method: "PATCH", endpoint: ":id/restore", summary: `${<%= classify(name) %>Service.MODULE_NAME} 복구`, role: "admin" })
  async restore(@Param("id", ParseIntPipe) id: number): Promise<NullDataResponseDto> {
    await this.service.restore(id);
    return this.responseData(this.UPDATE);
  }
}

